val pico = require "pico"

val _ = pico.color.white
val x = pico.color.gray
val B = pico.color.black

@{
    pipe = @{
        straight = @{
            @{ x, x, x, x, x, x },
            @{ x, _, _, _, _, x },
            @{ B, B, B, B, B, B },
            @{ B, B, B, B, B, B },
            @{ x, _, _, _, _, x },
            @{ x, x, x, x, x, x },
        },
        curve = @{
            @{ x, x, B, B, x, x },
            @{ x, _, B, B, _, x },
            @{ x, _, B, B, B, B },
            @{ x, _, B, B, B, B },
            @{ x, _, _, _, _, x },
            @{ x, x, x, x, x, x },
        },
    },
}
